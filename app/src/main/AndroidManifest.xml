<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mystore">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.home.ShoppingCartApplication"
        android:allowBackup="true"
        android:icon="@mipmap/shoppingcart"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/shoppingcart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.mystore.ui.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.mystore.ui.home.Cart"></activity>

        <activity android:name="com.example.mystore.ui.home.Favourite"></activity>
    </application>

</manifest>